{
  "name": "zinurooms",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "dotenv -e .env -- turbo run dev",
    "dev:web": "dotenv -e .env -- turbo run dev --filter=web",
    "dev:partner": "dotenv -e .env -- turbo run dev --filter=partner",
    "dev:admin": "dotenv -e .env -- turbo run dev --filter=admin",
    "dev:mobile": "dotenv -e .env -- turbo run dev --filter=mobile",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate": "turbo run db:generate --filter=@repo/db",
    "db:push": "turbo run db:push --filter=@repo/db",
    "db:studio": "turbo run db:studio --filter=@repo/db"
  },
  "devDependencies": {
    "dotenv-cli": "^11.0.0",
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/web",
    "apps/partner",
    "apps/admin",
    "packages/*"
  ],
  "overrides": {
    "esbuild": "^0.25.0"
  },
  "optionalDependencies": {
    "@parcel/watcher-linux-x64-glibc": "^2.5.1"
  }
}