{
    "name": "@repo/db",
    "version": "0.1.0",
    "type": "module",
    "private": true,
    "main": "./src/index.ts",
    "types": "./src/index.ts",
    "exports": {
        ".": {
            "types": "./src/index.ts",
            "default": "./src/index.ts"
        },
        "./schema": {
            "types": "./src/schema/index.ts",
            "default": "./src/schema/index.ts"
        },
        "./utils/vibeBranding": {
            "types": "./src/utils/vibeBranding.ts",
            "default": "./src/utils/vibeBranding.ts"
        }
    },
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "db:generate": "drizzle-kit generate",
        "db:push": "drizzle-kit push",
        "db:studio": "drizzle-kit studio",
        "db:seed": "npx tsx src/seed.ts",
        "lint": "eslint --max-warnings 0",
        "check-types": "tsc --noEmit"
    },
    "dependencies": {
        "@neondatabase/serverless": "^0.10.4",
        "dotenv": "^16.0.3",
        "drizzle-orm": "^0.45.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@repo/eslint-config": "*",
        "@repo/typescript-config": "*",
        "@types/node": "^22.15.3",
        "drizzle-kit": "^0.30.5",
        "eslint": "^9.39.1",
        "typescript": "5.9.2"
    }
}